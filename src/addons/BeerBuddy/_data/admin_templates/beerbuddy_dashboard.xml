<?xml version="1.0" encoding="utf-8"?>
<template title="beerbuddy_dashboard" version_id="1000010" version_string="1.0.0">
    <![CDATA[
    <xf:title>BeerBuddy Dashboard</xf:title>
    <xf:h1>BeerBuddy Dashboard</xf:h1>

    <xf:button href="{{ link('beerbuddy/add') }}">Add Beer</xf:button>

    <xf:form action="{{ link('beerbuddy') }}">
        <xf:section>
            <xf:head>
                <tr>
                    <th>Beer Name</th>
                    <th>URL</th>
                    <th>Actions</th>
                </tr>
            </xf:head>
            <xf:foreach loop="$beers" value="$beer">
                <tr>
                    <td>{{ $beer.beer_name }}</td>
                    <td>{{ $beer.url }}</td>
                    <td>
                        <xf:button href="{{ link('beerbuddy/edit', $beer) }}">Edit</xf:button>
                        <xf:button href="{{ link('beerbuddy/delete', $beer) }}">Delete</xf:button>
                    </td>
                </tr>
            </xf:foreach>
        </xf:section>
    </xf:form>
    ]]>
</template>
